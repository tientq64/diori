{
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[typescript]": {
		"editor.formatOnSave": true,
		"files.trimFinalNewlines": true
	},
	"[typescriptreact]": {
		"editor.formatOnSave": true,
		"files.trimFinalNewlines": true
	},
	"[scss]": {
		"editor.formatOnSave": true,
		"files.trimFinalNewlines": true
	},
	"tailwindCSS.experimental.classRegex": [
		[
			"clsx\\(([^)]*)\\)",
			"(?:'|\"|`)([^']*)(?:'|\"|`)"
		]
	]
}
